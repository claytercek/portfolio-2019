<section class="c-hero">
	<div class="c-hero--image">
		<img src="{{ project.thumbnail.src }}" alt="{{ project.title }}"/>
	</div>
	<div class="c-hero--text l-mainPadding u-spacing--mediumHalf">
		<h4 class="c-hero--category u-font-gamma">{{ project.category }}</h4>
        <h2 class="c-hero--title">{{ project.title }}</h2>
        <h2 class="c-hero--subtitle">{{ project.subtitle }}</h2>
	</div>
</section>
