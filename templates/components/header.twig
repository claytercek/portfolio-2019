<header>
	<div class="c-header--bar">
		<h1 class="c-header--title">{{site.title}}</h1>
		<button class="c-header--hamburger js-wave-toggleMenu">
			<div class="c-header--hamburgerWrapper">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
			</div>
		</button>
	</div>
	<div class="c-header--behind">
		<nav>
			<ul class="nav-main">
				{% for item in menu.items %}
					<li class="nav-main-item {{ item.classes|join(' ') }}">
						<a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
	</div>
</header>
